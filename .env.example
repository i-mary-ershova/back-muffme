# Database connection
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# JWT Authentication
JWT_SECRET="your-strong-secret-key-here"
JWT_EXPIRES_IN="7d"

# SMS Service Configuration (SMSC.ru)
SMSC_LOGIN="your_smsc_login"
SMSC_PASSWORD="your_smsc_password"
SMSC_API_KEY="" # Leave empty for development mode to avoid sending real SMS

# Node Environment
NODE_ENV="development" # Set to "production" in production environment

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password" 